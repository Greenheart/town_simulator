    "foswig": "^1.1.1",
    "immutable": "^3.8.1",
    "prettier": "^2.8.1",
    "surge": "^0.23.1",
    "unplugin-auto-import": "^0.12.0",
    "vite": "^3.2.5",
    "vitest": "^0.25.6"
  },
